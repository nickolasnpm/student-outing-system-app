<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StudentRegister">

    <ProgressBar
        android:id="@+id/progressBar"
        android:visibility="invisible"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.2"
        app:layout_constraintHorizontal_bias="0.5">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/cdalogo"
                tools:ignore="ContentDescription" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:text="Please Enter Your Details:"
                android:textAlignment="center"
                android:gravity="center"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.203"
                tools:ignore="HardcodedText" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Personal Details:"
                android:textAlignment="center"
                android:gravity="center"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.203"
                tools:ignore="HardcodedText" />

            <LinearLayout
                android:layout_width="370dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    android:text="Name (As per NRIC): "
                    android:gravity="center"
                    android:textAlignment="viewStart"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    tools:ignore="HardcodedText,RtlCompat" />

                <TextView
                    android:layout_width="20dp"
                    android:layout_height="match_parent"
                    android:gravity="center" />

                <com.google.android.material.textfield.TextInputLayout

                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/editname"
                        android:layout_width="260dp"
                        android:layout_height="match_parent"
                        android:hint="Enter your full name"
                        tools:ignore="Autofill,HardcodedText,TextFields" />

                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="370dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    android:text="Home Address: "
                    android:gravity="center"
                    android:textAlignment="viewStart"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    tools:ignore="HardcodedText,RtlCompat" />

                <TextView
                    android:layout_width="20dp"
                    android:layout_height="match_parent"
                    android:gravity="center" />

                <com.google.android.material.textfield.TextInputLayout

                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/editaddress"
                        android:layout_width="260dp"
                        android:layout_height="match_parent"
                        android:hint="Enter your home address"
                        tools:ignore="Autofill,HardcodedText,TextFields" />

                </com.google.android.material.textfield.TextInputLayout>


            </LinearLayout>

        <LinearLayout
            android:layout_width="370dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <TextView
                android:text="NRIC Number: "
                android:gravity="center"
                android:textAlignment="viewStart"
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:ignore="HardcodedText,RtlCompat" />

            <TextView
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:gravity="center" />

            <com.google.android.material.textfield.TextInputLayout

                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/editnric"
                    android:hint="Enter your NRIC number"
                    android:layout_width="260dp"
                    android:layout_height="match_parent"
                    tools:ignore="Autofill,HardcodedText,TextFields"
                    android:maxLength="12"
                    android:inputType="number"/>

            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="370dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <TextView
                android:text="Mobile Number:"
                android:gravity="center"
                android:textAlignment="viewStart"
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:ignore="HardcodedText,RtlCompat" />

            <TextView
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:gravity="center" />

            <com.google.android.material.textfield.TextInputLayout

                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:prefixText="+6 "
                app:prefixTextColor="@color/blue">

                <EditText
                    android:id="@+id/editmobile"
                    android:hint="Enter your mobile number"
                    android:layout_width="260dp"
                    android:layout_height="match_parent"
                    android:inputType="number"
                    tools:ignore="Autofill,HardcodedText,TextFields" />

            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>

            <LinearLayout

                android:layout_width="370dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:text="Email Address:"
                    android:gravity="center"
                    android:textAlignment="viewStart"
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    tools:ignore="HardcodedText,RtlCompat" />

                <TextView
                    android:layout_width="20dp"
                    android:layout_height="match_parent"
                    android:gravity="center" />

                <com.google.android.material.textfield.TextInputLayout

                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/editemail"
                        android:hint="Enter your email address"
                        android:layout_width="260dp"
                        android:layout_height="match_parent"
                        tools:ignore="Autofill,HardcodedText,TextFields" />

                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>

        <LinearLayout
            android:layout_width="370dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <TextView
                android:text="Gender:"
                android:gravity="center"
                android:textAlignment="viewStart"
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:ignore="HardcodedText,RtlCompat" />

            <TextView
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:gravity="center" />

            <com.google.android.material.textfield.TextInputLayout

                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:ems="10"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Select Gender"
                tools:ignore="HardcodedText">

                <AutoCompleteTextView
                    android:id="@+id/editgender"
                    android:layout_width="260dp"
                    android:layout_height="match_parent"
                    android:inputType="none"/>

            </com.google.android.material.textfield.TextInputLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="370dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <TextView
                android:text="Ethnicity:"
                android:gravity="center"
                android:textAlignment="viewStart"
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:ignore="HardcodedText,RtlCompat" />

            <TextView
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:gravity="center" />

            <com.google.android.material.textfield.TextInputLayout

                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:ems="10"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Select Ethnicity"
                tools:ignore="HardcodedText">

                <AutoCompleteTextView
                    android:id="@+id/editrace"
                    android:layout_width="260dp"
                    android:layout_height="match_parent"
                    android:inputType="none"/>

            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="370dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <TextView
                android:text="Course:"
                android:gravity="center"
                android:textAlignment="viewStart"
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:ignore="HardcodedText,RtlCompat" />

            <TextView
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:gravity="center" />

            <com.google.android.material.textfield.TextInputLayout

                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:ems="10"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Select Course"
                tools:ignore="HardcodedText">

                <AutoCompleteTextView
                    android:id="@+id/editcourse"
                    android:layout_width="260dp"
                    android:layout_height="match_parent"
                    android:inputType="none"/>

            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="370dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <TextView
                android:text="Branch:"
                android:gravity="center"
                android:textAlignment="viewStart"
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:ignore="HardcodedText,RtlCompat" />

            <TextView
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:gravity="center" />

            <com.google.android.material.textfield.TextInputLayout

                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:ems="10"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Select Branch"
                tools:ignore="HardcodedText">

                <AutoCompleteTextView
                    android:id="@+id/editbranch"
                    android:layout_width="260dp"
                    android:layout_height="match_parent"
                    android:inputType="none"/>

            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>

            <LinearLayout
                android:layout_width="370dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:text="Room Number:"
                    android:gravity="center"
                    android:textAlignment="viewStart"
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    tools:ignore="HardcodedText,RtlCompat" />

                <TextView
                    android:layout_width="20dp"
                    android:layout_height="match_parent"
                    android:gravity="center" />

                <com.google.android.material.textfield.TextInputLayout

                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/editroom"
                        android:hint="Enter your room number"
                        android:layout_width="260dp"
                        android:layout_height="match_parent"
                        tools:ignore="Autofill,HardcodedText,TextFields" />

                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="370dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:text="Student ID Number:"
                    android:gravity="center"
                    android:textAlignment="viewStart"
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    tools:ignore="HardcodedText,RtlCompat" />

                <TextView
                    android:layout_width="20dp"
                    android:layout_height="match_parent"
                    android:gravity="center" />

                <com.google.android.material.textfield.TextInputLayout

                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:helperText="*Request from management**"
                    app:helperTextTextColor="@color/red">

                    <EditText
                        android:id="@+id/editid"
                        android:hint="Enter your Student ID"
                        android:layout_width="260dp"
                        android:layout_height="match_parent"
                        android:inputType="number"
                        tools:ignore="Autofill,HardcodedText,TextFields" />

                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Emergency Contact Details:"
            android:textAlignment="center"
            android:gravity="center"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.203"
                tools:ignore="HardcodedText" />

        <LinearLayout
            android:layout_width="370dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <TextView
                android:text="Name (As per NRIC):"
                android:gravity="center"
                android:textAlignment="viewStart"
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:ignore="HardcodedText,RtlCompat" />

            <TextView
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:gravity="center" />

            <com.google.android.material.textfield.TextInputLayout

                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/editcontact"
                    android:hint="Enter your contact name"
                    android:layout_width="260dp"
                    android:layout_height="match_parent"
                    tools:ignore="Autofill,HardcodedText,TextFields" />

            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="370dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <TextView
                android:text="Mobile Number:"
                android:gravity="center"
                android:textAlignment="viewStart"
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:ignore="HardcodedText,RtlCompat" />

            <TextView
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:gravity="center" />

            <com.google.android.material.textfield.TextInputLayout

                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:prefixText="+6 "
                app:prefixTextColor="@color/blue">

                <EditText
                    android:id="@+id/editphone"
                    android:hint="Enter your contact number"
                    android:layout_width="260dp"
                    android:layout_height="match_parent"
                    android:inputType="number"
                    tools:ignore="Autofill,HardcodedText,TextFields" />

            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="370dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <TextView
                android:text="Relation:"
                android:gravity="center"
                android:textAlignment="viewStart"
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:ignore="HardcodedText,RtlCompat" />

            <TextView
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:gravity="center" />

            <com.google.android.material.textfield.TextInputLayout

                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:ems="10"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Select Relationship"
                tools:ignore="HardcodedText">

                <AutoCompleteTextView
                android:id="@+id/editrelate"
                android:layout_width="260dp"
                android:layout_height="match_parent"
                android:inputType="none"/>

            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Application Security Details:"
                android:gravity="center"
                android:textAlignment="center"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.203"
                tools:ignore="HardcodedText" />

        <LinearLayout
            android:layout_width="370dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:orientation="horizontal"
            tools:ignore="TooManyViews">

            <TextView
                android:text="Password:"
                android:gravity="center"
                android:textAlignment="viewStart"
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:ignore="HardcodedText,RtlCompat" />

            <TextView
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:gravity="center" />

            <com.google.android.material.textfield.TextInputLayout

                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/editpassword"
                    android:hint="Enter your password"
                    android:layout_width="260dp"
                    android:layout_height="match_parent"
                    tools:ignore="Autofill,HardcodedText,TextFields" />

            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="370dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <TextView
                android:text="Confirm Password:"
                android:gravity="center"
                android:textAlignment="viewStart"
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:ignore="HardcodedText,RtlCompat" />

            <TextView
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:gravity="center" />

            <com.google.android.material.textfield.TextInputLayout

                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/editrepassword"
                    android:hint="Confirm your password"
                    android:layout_width="260dp"
                    android:layout_height="match_parent"
                    tools:ignore="Autofill,HardcodedText,TextFields" />

            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:text=""
                android:textAlignment="center"
                android:gravity="center"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="HardcodedText,TooManyViews" />

        </LinearLayout>

    </ScrollView>
    <Button
        android:id="@+id/registerbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.95"
        app:layout_constraintHorizontal_bias="0.502"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/clearbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Clear"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.95"
        app:layout_constraintHorizontal_bias="0.18"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/cancelregister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancel"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.95"
        app:layout_constraintHorizontal_bias="0.82"
        tools:ignore="HardcodedText" />

</androidx.constraintlayout.widget.ConstraintLayout>