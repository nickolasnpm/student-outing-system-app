<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.30">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="50dp"
            app:srcCompat="@drawable/ic_person"
            tools:ignore="ContentDescription" />

        <TextView
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:gravity="center"/>

        <TextView
            android:id="@+id/applicantname"
            android:layout_width="240dp"
            android:layout_height="50dp"
            android:textAlignment="viewStart"
            android:gravity="center"
            android:hint="Applicant Name"
            android:textSize="18sp"
            android:textColor="@color/blue"
            android:textStyle="bold"
            tools:ignore="HardcodedText,RtlCompat" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.39">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="50dp"
            app:srcCompat="@drawable/ic_baseline_local_phone_24"
            tools:ignore="ContentDescription" />

        <TextView
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:gravity="center"/>

        <TextView
            android:id="@+id/applicantnumber"
            android:layout_width="240dp"
            android:layout_height="50dp"
            android:textAlignment="viewStart"
            android:gravity="center"
            android:hint="Applicant Number"
            android:textSize="18sp"
            android:textColor="@color/blue"
            android:textStyle="bold"
            tools:ignore="HardcodedText,RtlCompat" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.480">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="50dp"
            app:srcCompat="@drawable/ic_baseline_home_work_24"
            tools:ignore="ContentDescription" />

        <TextView
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:gravity="center"/>

        <TextView
            android:id="@+id/destination"
            android:layout_width="240dp"
            android:layout_height="50dp"
            android:textAlignment="viewStart"
            android:gravity="center"
            android:hint="Destination"
            android:textSize="18sp"
            android:textColor="@color/blue"
            android:textStyle="bold"
            tools:ignore="HardcodedText,RtlCompat" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.570" >

        <ImageView
            android:layout_width="40dp"
            android:layout_height="50dp"
            app:srcCompat="@drawable/ic_baseline_create_24"
            tools:ignore="ContentDescription" />

        <TextView
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:gravity="center"/>

        <TextView
            android:id="@+id/reason"
            android:layout_width="240dp"
            android:layout_height="50dp"
            android:textAlignment="viewStart"
            android:gravity="center"
            android:hint="Reason"
            android:textSize="18sp"
            android:textColor="@color/blue"
            android:textStyle="bold"
            tools:ignore="HardcodedText,RtlCompat" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.660">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="50dp"
            app:srcCompat="@drawable/ic_baseline_calendar_month_24"
            tools:ignore="ContentDescription" />

        <TextView
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:gravity="center"/>

        <TextView
            android:id="@+id/dategoout"
            android:layout_width="240dp"
            android:layout_height="50dp"
            android:textAlignment="viewStart"
            android:gravity="center"
            android:hint="Outing Date"
            android:textSize="18sp"
            android:textColor="@color/blue"
            android:textStyle="bold"
            tools:ignore="HardcodedText,RtlCompat" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.750">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="50dp"
            app:srcCompat="@drawable/ic_baseline_calendar_month_24"
            tools:ignore="ContentDescription" />

        <TextView
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:gravity="center"/>

        <TextView
            android:id="@+id/datecomein"
            android:layout_width="240dp"
            android:layout_height="50dp"
            android:textAlignment="viewStart"
            android:gravity="center"
            android:hint="Return Date"
            android:textSize="18sp"
            android:textColor="@color/blue"
            android:textStyle="bold"
            tools:ignore="HardcodedText,RtlCompat" />

    </LinearLayout>

    <TextView
        android:id="@+id/status"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:ems="10"
        android:text="STATUS: PENDING"
        android:textSize="28sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textAlignment="center"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.500"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.840"
        tools:ignore="HardcodedText" />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>